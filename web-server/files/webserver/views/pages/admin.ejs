<div class="container" >
    <div class ="row">
        <div class="col-xs-12 text-center">
            <h1>Wisdota admin panel</h1>
        </div>
        <div class="col-xs-8 col-xs-offset-2">
            <ul id="main-tabs" class="nav nav-tabs">
                <li>
                    <a data-toggle="tab" href="#users">Users</a>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Tables<span class="caret"></span></a>
