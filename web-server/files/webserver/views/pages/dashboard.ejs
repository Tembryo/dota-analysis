                        <img id="hero_7" height="32" width="60">
                        <img id="hero_8" height="32" width="60">
                        <img id="hero_9" height="32" width="60">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-4 text-center"> 

                        <div class="row">
                            <h3>
                                <img id="current-hero-icon" width="32px" style="margin:0px 10px 0px 10px">
                                <span id="current-hero"></span>: <span id="current-imr"></span> IMR 
                            </h3>
                        </div>
                        <div class="row" id="polygon-container"></div>
