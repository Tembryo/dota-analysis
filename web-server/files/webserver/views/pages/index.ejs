                     <img src="/static/img/email.svg" width="61px" height="20px">
                     </a>

                    <div class="fb-share-button" data-href="http://wisdota.com" data-layout="button_count"></div>
                </div>
            <div class="col-lg-4 col-md-4 col-sm-2"></div>
        
        </div>
    </div>
</div>

<!-- Wisdota Featurette -->
<section id ="about">
    <div class="container">
        <div class ="row">
            <hr class="featurette-divider">
            <div class="col-lg-12 text-center">
                <h2 class="features-heading">Features</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 text-center">
                <div>
                    <img src="static/img/features/results.png" height="250px" width="300px">
                </div>
                <h3>Rate Your Play</h3>
                <p class="lead">Measure your performance in each match using our <a href="/about">IMR</a>. </p>
            </div>
            <div class="col-lg-4 text-center">
                <div>
                    <img src="/static/img/features/dashboard.png" height="250px" width="300px">
                </div>
                <h3>Track Your Progress</h3>
                <p class="lead">See trends in your performance over time. </p>
            </div>
            <div class="col-lg-4 text-center">
                <div>
                    <img src="/static/img/features/match_list.png" height="250px" width="300px">
                </div>
                <h3>See Your History</h3>
                <p class="lead">Get a list of results for your recent matches. </p>
            </div>
        </div>
        <!-- Click Me Button -->
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <a id="try-wisdota-link" href="/user" class="btn btn-warning btn-lg btn-block active"><span class="glyphicon glyphicon-play"></span> Try Wisdota</a>
                <hr class="primary">                
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</section>



<div class="modal fade" id="loading" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="my-modal-title">Downloading and Analysing Replay File</h4>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div id="progressTimer"></div>
                </div>
            </div>
        </div>
    </div>
</div>
