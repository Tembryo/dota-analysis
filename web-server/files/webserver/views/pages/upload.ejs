<%     title="Replay Upload";
    layout("base-template") -%>

<section id="user-container" class="container content-section text-center">



    <div class="row">
		<div class="col-xs-6">
            <h1> Analyse Match by ID </h1>
        </div>

		<div class="col-xs-6 ">
            <h1> Upload Replay File</h1>
        </div>
    </div>

    <div class="row">
		<div class="col-xs-6">
            <p>We will download it from the Steam servers if available.</p>
        </div>

		<div class="col-xs-6 ">
            <p>Upload a replay file stored on your PC.</p>
        </div>
    </div>


	<div class="row">
        <form id="request-form">
	        <div class="col-xs-2">
                <p>Match ID:</p>
            </div>
		    <div class="col-xs-2">
                <input type="text" id="request-id"/>
            </div>
		    <div class="col-xs-2">
                <input type="button" id="request-button" value="Add Match" disabled>
            </div>
        </form>
<% if(user["statuses"].indexOf("verified") >=0){%>
        <form enctype="multipart/form-data" id="upload-form">
		    <div class="col-xs-2">
                <p>Replay file:</p>
            </div>
		    <div class="col-xs-2">
                <input type="file" id="upload-file" name="file" accept=".dem">
            </div>
		    <div class="col-xs-2">
                <input type="button" id="upload-button" value="Upload" disabled>
            </div>
        </form>
<% } else {%>

        <div class="col-xs-6">
                <p>Verify your email address in the <a href="/user">User panel</a> to enable replay upload.</p>
        </div>
<%}%>
    </div>

	<div class="row">
		    <div class="col-xs-2">
                <p>Status:</p>
            </div>
		    <div class="col-xs-4">
                <p id="request-field"></p>
            </div>
<% if(user["statuses"].indexOf("verified") >=0){%>
		    <div class="col-xs-2">
                <p>Progress:</p>
            </div>
		    <div class="col-xs-4">
                <p id="progress-field"></p>
            </div>
<% }%>
    </div>

	<div class="row">
		    <div class="col-xs-6">
                <h2>Requested Matches</h2>
            </div>
		    <div class="col-xs-6">
                <h2>Replays</h2>
            </div>
    </div>

	<div class="row">
	    <div class="col-xs-4  col-xs-offset-1">
            <table class = "matches" id = "requests-table"></table>
        </div>
	    <div class="col-xs-4  col-xs-offset-2">
            <table class = "matches" id = "uploads-table"></table>

        </div>

    </div>

</section>

<script src="/static/js/upload.js" charset="utf-8"></script>
<link href="/static/css/formatting.css" rel="stylesheet">

