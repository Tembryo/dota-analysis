<% 
    title="Match History";
    layout("base-template")
-%>

<section id="user-container" class="container content-section text-center">
	<div class="row">
		<div class="col-xs-1 col-xs-offset-3">
        </div>
		<div class="col-xs-5" >
            <h1 style="display: inline;line-height:48px;"> <%= user["name"]%> </h1>
        </div>
        <div class="col-xs-2 col-xs-offset-1" >
            <p><a href="/settings">Settings</a></p>
        </div>
    </div>
	<div class="row">
        <div class="col-xs-6 col-xs-offset-3">
        <p>Matches</p>
        </div>
    </div>
	<div class="row">
        <div class="col-xs-6 col-xs-offset-3" >
            <table id="history-table">
                <tr><th>Status</th><th>Time</th><th>Hero</th><th>Duration</th><th>Result</th></tr>
            </table>
            <div  style="text-align:'right'">Nagivation incoming</div>
        </div>
        <div class="col-xs-2 col-xs-offset-1" >
            <table id="history-table" border="1px">
                <tr><td>Symbol</td><th>State</th></tr>
                <tr><td><img src="/static/img/elements/colored_balls/green.png" width="20px"></td><td>Successfully analysed</td></tr>
                <tr class="history-match"><td class="clickable"><img src="/static/img/elements/colored_balls/gray.png" width="20px"></td><td>Click me to parse the match</td></tr>
                <tr><td><img src="/static/img/elements/colored_balls/yellow.png" width="20px"></td><td>Queued for download/downloading</td></tr>
                <tr><td><img src="/static/img/elements/colored_balls/blue.png" width="20px"></td><td>Replay waiting for analysis</td></tr>
                <tr><td><img src="/static/img/elements/colored_balls/aqua.png" width="20px"></td><td>Processing</td></tr>
                <tr><td><img src="/static/img/elements/colored_balls/red.png" width="20px"></td><td>Failure</td></tr>


                <tr><td><img src="/static/img/elements/colored_balls/gray.png" width="20px"></td><td>Untried, but too old</td></tr>
                <tr><td><img src="/static/img/elements/colored_balls/white.png" width="20px"></td><td>Unavailable for download</td></tr>
            </table>
        </div>
    </div>

</section>

<script type="text/javascript">
    user_id = "<%= user["identifier"] %>";
</script>
<script src="/static/js/history.js" charset="utf-8"></script>


<link href="/static/css/formatting.css" rel="stylesheet">
