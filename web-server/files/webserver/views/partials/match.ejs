<section id="match" class="container-fluid content-section text-center">

    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
            <h1 class="page-header"> Match <%=match_id%> </h1>
        </div>
    </div>

    <div class = "row" id ="button-row" >
        <div class ="col-xs-4 col-xs-offset-4  col info-text" >
