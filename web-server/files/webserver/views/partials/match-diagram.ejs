<section id="match" class="container-fluid content-section text-center">

    <div class="row">
	    <div class="col-xs-6 col-xs-offset-3">
            <h1> Match <%=match_id%> </h1>
        </div>
    </div>

    <div class = "row" id ="button-row" >
        <div class ="col-xs-4 col info-text" >
    <p> 
            Drag the timeline
    </p> 
        </div>
        <div class ="col-xs-4 col info-text" >
    <p> 
            Click on heroes on the map
    </p> 
        </div>
        <div class ="col-xs-1 col info-text" >
            <a href="#prototype" class="btn btn-default btn-lg" onclick="toggleAutoScroll();" id ="toggle-autoscroll">
                Play
            </a>
        </div>
       <div class ="col-xs-3 col info-text" >
    <p> Tweet this match:
    <% tweet_text = "Check out this match: " %>
    <a href="https://twitter.com/share" style="vertical-align: text-bottom" class="twitter-share-button"{count} data-text="<%=tweet_text%>" data-size="large" data-url="http://www.wisdota.com/match/<%=match_id%>" data-hashtags="wisdota,dota2">Tweet</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    </p>
        </div>


    </div>
    <div  class = "row" >
        <div class ="col-xs-12 col" >
		    <div id="timeline" class="svg-container"></div>
	    </div>
    </div>
    <div class="row">
	    <div class ="col-xs-6 col" >
		    <div id="diagram" class="svg-container"></div>
	    </div>
        <div class ="col-xs-6 col" >
		    <div id="map" class="svg-container"></div>
	    </div>
    </div>

</section>

 <section id="match-fight-display" class="container content-section text-center">
    <div class="row">
        <!-- first half of the page for the fights displayed in a veritical carousel -->
        <div id = "fights-list-container" class="col-lg-6">
            <h2>Fight List</h1>
            <!-- the carousel -->
            <div class="carousel">
                <div id="carousel" class="carousel_inner"> 
                    <!-- carousel_boxes will be appended in here -->
                </div>
                <p class="btns">
                    <input type="button" id="carousel_prev" value="<<">
                    <input type="button" id="carousel_next" value=">>">
                </p>
            </div>
        </div>
        <!-- second half of the page for the combat log -->
        <div id = "fight-details-container" class="col-lg-6">
            <h2>Combat Log</h1>
            <div id = "fight-details-view"> 
                <!-- details of the selected fight go in here -->
                <textarea id = "my_text_area" rows="50" cols="50">

                </textarea>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" type="text/css" href="/static/css/diagram.css"/>
<link rel="stylesheet" type="text/css" href="/static/css/fight-display.css"/>

