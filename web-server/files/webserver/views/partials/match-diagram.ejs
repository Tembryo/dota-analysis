<script type="text/javascript">
match_id = "<%=match_id%>";
</script>

<script src="/static/js/diagram.js" charset="utf-8"></script>
<script src ="/static/js/fight-display.js"></script>
<script src="/static/js/jq.carousel.js"></script>

<script src="/static/js/match.js" charset="utf-8"></script>


